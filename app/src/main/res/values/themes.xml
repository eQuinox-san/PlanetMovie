<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanetMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_appbar</item>
        <item name="colorPrimaryVariant">@color/color_appbar</item>
        <item name="colorOnPrimary">@color/color_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_status_bar</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_background</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <!--        <item name="android:windowActivityTransitions">true</item>-->
<!--        <item name="android:windowEnterTransition">@android:transition/slide_right</item>-->
<!--        <item name="android:windowExitTransition">@android:transition/slide_left</item>-->

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_appbar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/color_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="SearchTheme" parent="Widget.AppCompat.SearchView">
        <item name="background">@color/color_card_background</item>
    </style>

<!--    <style name="PlanetMovie.SearchView" parent="ThemeOverlay.AppCompat">-->
<!--        <item name="android:background">@color/white</item>-->
<!--    </style>-->

</resources>